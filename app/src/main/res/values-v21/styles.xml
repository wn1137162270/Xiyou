<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTheme" parent="@android:style/Theme.DeviceDefault.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/myActionBarStyle</item>
        <item name="android:actionBarSize">50dp</item>
        <item name="android:actionOverflowMenuStyle">@style/myOverflowMenuStyle</item>
    </style>

    <style name="myOverflowMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:background">@color/colorDarkGray</item>
    </style>

</resources>